{
  "name": "@blue-cortex/capacitor-powersync-supabase",
  "version": "1.0.0",
  "description": "A Capacitor plugin for PowerSync with Supabase",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Sources",
    "Package.swift"
  ],
  "author": {
    "name": "Blue Cortex",
    "email": "admin@blue-cortex.com"
  },
  "contributors": [
    {
      "name": "Saiful Chowdhury",
      "email": "saiful.karim@gmail.com"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blue-cortex/capacitor-powersync-supabase.git"
  },
  "bugs": {
    "url": "https://github.com/blue-cortex/capacitor-powersync-supabase/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "powersync",
    "supabase"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "echo 'Skipping iOS verification as it relies on CocoaPods currently'",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "bun run build",
    "lint": "bun run eslint && bun run prettier -- --check && bun run swiftlint -- lint",
    "fmt": "bun run eslint -- --fix && bun run prettier -- --write && bun run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api PowerSyncPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "bun run clean && bun run docgen && tsc -b && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "bun run build",
    "preinstall": "npx only-allow bun"
  },
  "engines": {
    "npm": "Please use bun instead of npm",
    "yarn": "Please use bun instead of yarn",
    "pnpm": "Please use bun instead of pnpm",
    "bun": ">=1.3.0"
  },
  "dependencies": {
    "@powersync/web": "^1.32.0",
    "@supabase/supabase-js": "^2.95.3"
  },
  "devDependencies": {
    "@capacitor/android": "^8.1.0",
    "@capacitor/core": "^8.1.0",
    "@capacitor/docgen": "^0.3.1",
    "@capacitor/ios": "^8.1.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "prettier-plugin-java": "^2.8.1",
    "rimraf": "^6.1.2",
    "rollup": "^4.57.1",
    "swiftlint": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@capacitor/core": "^8.1.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}